{
  "name": "salary-tax-electron",
  "version": "1.0.0",
  "description": "برنامج حساب ضريبة الدخل (نسخة سطح المكتب)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run react-start\" \"npm run electron-start\"",
    "react-start": "cd app && npm start",
    "electron-start": "wait-on tcp:3000 && electron .",
    "build-react": "cd app && npm run build",
    "dist": "npm run build-react && electron-builder --win"
  },
  "build": {
    "appId": "com.salary.tax",
    "productName": "Salary Tax",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "main.js"
    ],
    "directories": {
      "buildResources": "build"
    }
  },
  "dependencies": {
    "electron": "^26.6.10"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  }
}
